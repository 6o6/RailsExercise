<div class="container">
  <div class="lead well">
    <div class="media">
      <div class="media-left">
        <a href="#">
          <img class="media-object" src="http://www.gravatar.com/avatar/424242">
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= @question.email %> asked a question: </h4>
        <p style="font-size:14px">Question No. <%= @question.id %></p>
        <%= @question.body %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">

      <div>
        <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#new-answer-modal">Submit new answer</button>
      </div>

        <%= render partial: 'home/new_answer_form', :locals => {:question_id => @question.id} %>
        <% @answers.each do |a| %>
        <div class="media">
          <div class="media-left">
            <a href="#">
              <img class="media-object" src="<%= a.gravatar %>">
            </a>
          </div>
          <div class="media-body">
            <h4 class="media-heading"><%= a.email %> answered: </h4>
            <div><%= time_ago_in_words a.created_at %> ago</div>
            <%= a.body %>          
  	      </div>
        </div>
        <% end %>

        <% if @answers.empty? %>
          <div class="alert alert-info">No one asked yet, be the first to help?</div>
        <% end %> 

    </div>
  </div>

</div>